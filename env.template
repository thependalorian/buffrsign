# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# JWT Configuration (Required for Authentication)
JWT_ACCESS_SECRET=your_jwt_access_secret_key_here_make_it_long_and_secure
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_make_it_long_and_secure
JWT_DOCUMENT_SECRET=your_jwt_document_secret_key_here_make_it_long_and_secure
JWT_SIGNATURE_SECRET=your_jwt_signature_secret_key_here_make_it_long_and_secure
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_DOCUMENT_EXPIRY=1h
JWT_SIGNATURE_EXPIRY=30m

# OpenAI Configuration (Required for AI Services)
OPENAI_API_KEY=your_openai_api_key

# Application Configuration
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug

# Email System Configuration (Required for Email Notifications)
# Primary Email Provider (choose one: sendgrid, resend, ses)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
RESEND_API_KEY=your_resend_api_key
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Email Configuration
FROM_EMAIL=noreply@buffr.ai
FROM_NAME=BuffrSign
NEXT_PUBLIC_APP_URL=https://sign.buffr.ai

# Email System Settings
EMAIL_QUEUE_ENABLED=true
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=300000
EMAIL_BATCH_SIZE=100
EMAIL_RATE_LIMIT=1000

# Custom Configuration
CUSTOM_KEY=your_custom_key

# ========================================
# Google OAuth Configuration (Shared)
# ========================================
# Added by update-google-auth-env.sh on $(date)

# Google OAuth Credentials (Shared across all Buffr projects)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_PROJECT_ID=your_google_project_id_here

# Project-specific Configuration
GOOGLE_REDIRECT_URI_DEV=http://localhost:3001/auth/callback
GOOGLE_REDIRECT_URI_PROD=https://sign.buffr.ai/auth/callback

# Google Drive API (if needed)
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id_here
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret_here
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3001/auth/google/callback