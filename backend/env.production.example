# BuffrSign Production Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/buffrsign

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Supabase Project Settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# =============================================================================
# FILE STORAGE
# =============================================================================
# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# File Upload Limits
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,png,jpg,jpeg

# =============================================================================
# REDIS & CACHING
# =============================================================================
# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Email Templates
EMAIL_FROM=noreply@buffrsign.com
EMAIL_REPLY_TO=support@buffrsign.com

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry Configuration
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# Logging
LOG_FORMAT=json
LOG_LEVEL=INFO

# =============================================================================
# COMPLIANCE & SECURITY
# =============================================================================
# ETA 2019 Compliance
ETA_2019_ENABLED=true
CRAN_ACCREDITATION_ENABLED=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# =============================================================================
# BIOMETRIC & BEHAVIORAL AUTHENTICATION
# =============================================================================
# Biometric Configuration
BIOMETRIC_ENABLED=true
BIOMETRIC_CONFIDENCE_THRESHOLD=0.8
BIOMETRIC_LIVENESS_THRESHOLD=0.9

# Behavioral Analysis
BEHAVIORAL_ANALYSIS_ENABLED=true
BEHAVIORAL_RISK_THRESHOLD=0.7

# =============================================================================
# QUANTUM-SAFE CRYPTOGRAPHY
# =============================================================================
# Post-Quantum Cryptography
QUANTUM_SAFE_ENABLED=true
QUANTUM_SAFE_ALGORITHM=CRYSTALS-Dilithium
HYBRID_SIGNATURES_ENABLED=true

# =============================================================================
# AUDIT TRAIL
# =============================================================================
# Audit Trail Configuration
AUDIT_TRAIL_ENABLED=true
AUDIT_TRAIL_RETENTION_DAYS=2555  # 7 years

# =============================================================================
# MACHINE LEARNING & FRAUD DETECTION
# =============================================================================
# ML Configuration
ML_FRAUD_DETECTION_ENABLED=true
ML_MODEL_PATH=/models/fraud_detection.pkl
ML_CONFIDENCE_THRESHOLD=0.85

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@buffrsign.com

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Background Tasks
BACKGROUND_TASK_WORKERS=4
BACKGROUND_TASK_QUEUE_SIZE=100

# =============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# =============================================================================
# Docker Configuration
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com

# Kubernetes Configuration
K8S_NAMESPACE=buffrsign
K8S_REPLICAS=3

# Load Balancer
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Disaster Recovery
DR_ENABLED=true
DR_REPLICATION_LAG_THRESHOLD=300  # 5 minutes

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Testing Configuration
TESTING_ENABLED=false
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/buffrsign_test

# Debug Configuration
DEBUG_ENABLED=false
DEBUG_LEVEL=ERROR

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Feature Toggles
FEATURE_AI_ANALYSIS=true
FEATURE_BIOMETRIC_AUTH=true
FEATURE_QUANTUM_SAFE=true
FEATURE_ML_FRAUD_DETECTION=true
FEATURE_ADVANCED_COMPLIANCE=true

# =============================================================================
# API VERSIONING
# =============================================================================
API_VERSION=v1
API_PREFIX=/api/v1

# =============================================================================
# DOCUMENTATION
# =============================================================================
# API Documentation
DOCS_ENABLED=false  # Disable in production
REDOC_ENABLED=false  # Disable in production

# =============================================================================
# MONETIZATION & SUBSCRIPTIONS
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Subscription Plans
FREE_PLAN_LIMIT=5
BASIC_PLAN_LIMIT=50
PREMIUM_PLAN_LIMIT=500
ENTERPRISE_PLAN_LIMIT=unlimited

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,af,zu
TIMEZONE=UTC

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
# Legal Configuration
TERMS_OF_SERVICE_URL=https://buffrsign.com/terms
PRIVACY_POLICY_URL=https://buffrsign.com/privacy
COOKIE_POLICY_URL=https://buffrsign.com/cookies

# Data Protection
GDPR_COMPLIANCE_ENABLED=true
POPIA_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years

# =============================================================================
# MONITORING & ALERTS
# =============================================================================
# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Alerting
ALERT_EMAIL=support@buffrsign.com
ALERT_SLACK_WEBHOOK=your-slack-webhook-url

# =============================================================================
# SECURITY HEADERS & CORS
# =============================================================================
# CORS Configuration
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Security Headers
SECURITY_HEADERS_X_FRAME_OPTIONS=DENY
SECURITY_HEADERS_X_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_HEADERS_X_XSS_PROTECTION=1; mode=block
SECURITY_HEADERS_REFERRER_POLICY=strict-origin-when-cross-origin
