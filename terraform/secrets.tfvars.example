# BuffrSign Secrets Configuration
# Copy this file to secrets.tfvars and fill in your actual values
# IMPORTANT: Add secrets.tfvars to .gitignore to prevent committing secrets

# DigitalOcean Configuration
do_token = "your_digitalocean_api_token_here"

# Domain Configuration
domain_name = "sign.buffr.ai"
email = "admin@buffr.ai"

# SSH Configuration
ssh_public_key_path = "~/.ssh/id_rsa.pub"
admin_ip = "your_admin_ip_here"  # Restrict to your IP for security

# Supabase Configuration
supabase_url = "https://inqoltqqfneqfltcqlmx.supabase.co"
supabase_service_key = "your_supabase_service_key_here"
supabase_anon_key = "your_supabase_anon_key_here"

# Authentication
jwt_secret = "your_jwt_secret_key_here_minimum_32_characters"

# Google OAuth Configuration
google_client_id = "your_google_client_id_here"
google_client_secret = "your_google_client_secret_here"

# Digital Signature Configuration
signature_algorithm = "RSA-SHA256"
certificate_authority = "internal"
signature_validity_days = 365

# Email Configuration
email_provider = "sendgrid"
sendgrid_api_key = "your_sendgrid_api_key_here"
resend_api_key = "your_resend_api_key_here"
aws_access_key_id = "your_aws_access_key_id_here"
aws_secret_access_key = "your_aws_secret_access_key_here"
aws_region = "us-east-1"

# Storage Configuration
storage_provider = "supabase"
storage_bucket = "documents"
max_file_size = 10485760
allowed_file_types = "pdf,doc,docx"

# Security Configuration
cors_origins = "http://localhost:3000,http://localhost:8082"
rate_limit_window = 900000
rate_limit_max = 100
encryption_key = "your_encryption_key_here"

# Compliance Configuration
namibia_eta_compliance = true
compliance_audit_enabled = true
audit_retention_days = 2555

# Monitoring Configuration
monitoring_enabled = true
log_level = "info"
metrics_enabled = true